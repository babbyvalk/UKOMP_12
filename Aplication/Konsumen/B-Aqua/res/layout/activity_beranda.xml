<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fafa.b_aqua.BerandaActivity"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="B - Aqua"
        android:textColor="@android:color/white"
        android:textSize="50dp" />

        <ImageView
            android:id="@+id/imagePenjualan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textView1"
            android:layout_marginRight="28dp"
            android:layout_marginTop="56dp"
            android:layout_toLeftOf="@+id/imageView1"
            android:src="@drawable/penjualan" />

        <ImageView
            android:id="@+id/imageData"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/imagePenjualan"
            android:layout_below="@+id/imagePenjualan"
            android:layout_marginTop="72dp"
            android:src="@drawable/untitle1" />

        <Button
            android:id="@+id/btnPesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imagePenjualan"
            android:layout_alignRight="@+id/imagePenjualan"
            android:layout_below="@+id/imagePenjualan"
             style="@style/btnStyleOrange"
            android:text="Pesan Barang" />

        <ImageView
            android:id="@+id/imageList"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/imageData"
            android:layout_marginLeft="42dp"
            android:layout_toRightOf="@+id/imagePenjualan"
            android:src="@drawable/list" />

        <Button
            android:id="@+id/btnData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageData"
            android:layout_alignRight="@+id/imageData"
            android:layout_below="@+id/imageData"
             style="@style/btnStyleOrange"
            android:text="Data Pembeli" />

        <Button
            android:id="@+id/btnDaftar"
            style="@style/btnStyleOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnPesan"
            android:layout_alignLeft="@+id/imageList"
            android:layout_alignRight="@+id/imageList"
            android:layout_below="@+id/imageList"
            android:text="Daftar Barang" />


</RelativeLayout>
